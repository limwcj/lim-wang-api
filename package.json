{
  "name": "lim-wang-api",
  "version": "1.0.0",
  "description": "lim.wang api",
  "author": "Lim.Wang",
  "license": "MIT",
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "ts-node -r dotenv/config -r tsconfig-paths/register src/main.ts",
    "start:dev": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "start:prod": "node -r dotenv/config dist/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/apollo": "^10.0.19",
    "@nestjs/axios": "^0.1.0",
    "@nestjs/common": "^9.0.7",
    "@nestjs/core": "^9.0.7",
    "@nestjs/graphql": "^10.0.21",
    "@nestjs/microservices": "^9.0.7",
    "@nestjs/passport": "^9.0.0",
    "@nestjs/platform-express": "^9.0.7",
    "@nestjs/serve-static": "^3.0.0",
    "@prisma/client": "^4.1.1",
    "@types/body-parser": "^1.19.2",
    "@types/crypto-js": "^4.1.1",
    "@types/express-xml-bodyparser": "^0.3.2",
    "@types/lodash": "^4.14.182",
    "@types/request": "^2.48.8",
    "apollo-server-express": "3.10.0",
    "body-parser": "^1.20.0",
    "class-transformer": "0.5.1",
    "class-validator": "0.13.2",
    "crypto-js": "^4.1.1",
    "dotenv": "^16.0.1",
    "express-xml-bodyparser": "^0.3.0",
    "fast-xml-parser": "^4.0.9",
    "graphql": "^16.5.0",
    "ioredis": "^5.2.2",
    "lodash": "^4.17.21",
    "lru-cache": "^7.13.2",
    "nestjs-pino": "^3.1.1",
    "p-map": "^5.5.0",
    "passport": "^0.6.0",
    "passport-http-bearer": "^1.0.1",
    "pino-http": "^8.2.0",
    "reflect-metadata": "0.1.13",
    "request": "^2.88.2",
    "rxjs": "^7.5.6",
    "short-uuid": "^4.2.0"
  },
  "devDependencies": {
    "@nestjs/testing": "^9.0.7",
    "@types/chance": "1.1.3",
    "@types/express": "4.17.13",
    "@types/jest": "28.1.6",
    "@types/node": "18.6.2",
    "@types/supertest": "2.0.12",
    "chance": "1.1.8",
    "jest": "28.1.3",
    "nodemon": "^2.0.19",
    "prettier": "^2.7.1",
    "prisma": "^4.1.1",
    "rimraf": "3.0.2",
    "supertest": "6.2.4",
    "ts-jest": "28.0.7",
    "ts-node": "10.9.1",
    "tsc-watch": "5.0.3",
    "tsconfig-paths": "4.0.0",
    "tslint": "6.1.3",
    "typescript": "^4.7.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true,
    "trailingComma": "all"
  }
}
